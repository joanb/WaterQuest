<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="joandev.waterquest" >


    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />
    <application
        android:screenOrientation="portrait"
        android:configChanges="orientation|keyboardHidden"
    android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:screenOrientation="portrait"
            android:name=".Views.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".Views.AvatarMaker"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Views.QuizActivity"
            android:label="@string/title_activity_quiz" >

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Views.FurtivaActivity"
            android:label="@string/title_activity_furtiva" >

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Views.RanquingActivity"
            android:label="@string/title_activity_ranquing" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Views.AcercameActivity"
            android:label="@string/title_activity_acercame" >
        </activity>
    </application>

</manifest>
