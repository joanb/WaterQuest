<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="joandev.waterquest.Views.FurtivaActivity">

    <LinearLayout
        android:id="@+id/linearlayoutpapa"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewHeadFurtiva"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBodyFurtiva"
            android:adjustViewBounds="true"/>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewLegsFurtiva"
            android:adjustViewBounds="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/linearlayoutpapa"
        android:text="+1"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/text_id"
        android:layout_marginTop="35dp"
        android:src="@mipmap/drop" />

    <ImageView
        android:id="@+id/furtiva"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/drop" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description here"
        android:padding="20dp"
        android:textSize="15dp"
        android:background="#ff2154c9"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
