<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityMain"
    android:background="#EFEFEF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textLabel"
            android:hint="Â¡Dame un nombre!"
            android:editable="true"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:gravity="center" />

        <ListView
            android:divider="@null"
            android:layout_width="wrap_content"
            android:layout_height="329dp"
            android:id="@+id/swipeList"
            android:layout_weight="0.36" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comencem?"
            android:id="@+id/button"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:onClick="clickOnButton"
            android:background="@drawable/button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#EFEFEF"/>

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flecha_izq_0"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="140dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flecha_izq_1"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="240dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flecha_izq_2"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="340dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flecha_der_0"
        android:src="@drawable/arrow_right"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="270dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flecha_der_1"
        android:src="@drawable/arrow_right"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="270dp"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/flecha_der_2"
        android:src="@drawable/arrow_right"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="270dp"/>


</RelativeLayout>
